@model WarhammerTournaments.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_EmptyLayout";
}

<section class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto rounded shadow login-background">
                <div class="row">
                    <div class="col">
                        <div class="text-white m-5 text-center">
                            <h1>Войти</h1>
                        </div>
                        <div>
                            <form asp-action="Login" class="m-5">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <div class="mb-3">
                                        <label asp-for="EmailAddress" class="form-label text-white">Почта</label>
                                        <input asp-for="EmailAddress" class="form-control text-white form-control-grey-ng" type="text" id="username"/>
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label text-white" for="password">Пароль</label>
                                        <input asp-for="Password" class="form-control text-white form-control-grey-ng" type="password" id="password"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row mb-3">
                                        <input type="submit" class="form-control btn btn-outline-success text-white login-btn-bg mt-3" value="Войти">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

