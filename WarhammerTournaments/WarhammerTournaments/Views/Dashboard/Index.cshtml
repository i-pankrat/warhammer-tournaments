            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                @foreach (var tournament in Model)
                {
                    <div class="col d-flex align-items-stretch">
                        <div class="card mb-4 p-1 pt-3 mb-xl-0 tournament-card-bg text-white">
                            <a asp-area="" asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id">
                                <img src="@tournament.ImageUrl" alt="tournament" class="p-2 img-fluid w-100">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h3 class="mb-4">
                                    @tournament.Title
                                </h3>
                                <div class="mb-3 mt-auto">
                                    <div class="mb-3 lh-1">
                                        <i class="bi bi-house text-blue"></i>
                                        <span>@tournament.Address</span>
                                    </div>
                                    <div class="mb-3 lh-1">
                                        <i class="bi bi-calendar-check text-green"></i>
                                        <span>@tournament.Date.ToString("g")</span>
                                    </div>
                                    <div class="mb-3 lh-1">
                                        <i class="bi bi-person text-yellow"></i>
                                        <span>@tournament.RegisteredParticipant/@tournament.AvailableParticipant</span>
                                    </div>
                                    <div class="lh-1">
                                        <div class="row d-flex">
                                            <a asp-area="" asp-controller="Tournaments" asp-action="Applications" asp-route-id="@tournament.Id" class="btn flex-fill purple-btn-custom mb-3 mx-auto">Заявки</a>
                                        </div>
                                        <div class="row d-flex">
                                            <a asp-area="" asp-controller="Tournaments" asp-action="Edit" asp-route-id="@tournament.Id" class="btn flex-fill purple-btn-custom mb-3 mx-auto">Редактировать</a>
                                        </div>
                                        <div class="row d-flex">
                                            <a asp-area="" asp-controller="Tournaments" asp-action="Delete" asp-route-id="@tournament.Id" class="btn flex-fill black-btn-custom mx-auto">Удалить</a>
                                        </div>
