@{
    ViewData["Title"] = "Home Page";
}

<section class="d-flex flex-column min-vh-80 justify-content-center align-items-center">
    <div class="container">
        <div class="col-6 mx-auto rounded">
            <div class="row mt-5">
                <div class="text-white text-center justify-content-center">
                    <h1>Покажи, кто здесь сильнее! Одолей своих врагов на поле битвы.</h1>
                </div>
                <div class="row d-flex">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="col d-flex justify-content-center">
                            <a asp-area="" asp-controller="Tournaments" asp-action="Index" class="btn purple-btn-custom   mt-3">Турниры</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6 d-flex justify-content-center justify-content-md-end">
                            <a asp-area="" asp-controller="Tournaments" asp-action="Index" class="btn purple-btn-custom  mt-3">Турниры</a>
                        </div>

                        <div class="col-md-6 d-flex justify-content-center justify-content-md-start">
                            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn black-btn-custom mt-3">Зарегестрироваться</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>